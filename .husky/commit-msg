#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check commit message format (optional - conventional commits)
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo "ğŸ“ Use: type(scope): description"
    echo "ğŸ“ Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
    echo "ğŸ“ Example: feat(auth): add login functionality"
    echo "ğŸ“ Example: fix: resolve build issue"
    exit 1
fi

echo "âœ… Commit message format is valid!"